<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_order"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="6dp">

        <TextView
            android:id="@+id/label_ord_id"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="Order id:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/text_order_id"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/label_ord_id"
            android:text="Order number"
            android:textSize="15sp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/label_pro_id"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/label_ord_id"
            android:text="Product id:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/text_order_pro_id"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/label_pro_id"
            android:layout_below="@+id/text_order_id"
            android:text="Product number"
            android:textSize="15sp"
            android:layout_marginTop="6dp"/>


        <TextView
            android:id="@+id/label_pur_date"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/label_pro_id"
            android:text="Pur. date:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/text_order_pur_date"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/label_pur_date"
            android:layout_below="@+id/text_order_pro_id"
            android:text="Purchase date"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/label_deli_date"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/label_pur_date"
            android:text="Deli. date:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/text_order_deli_date"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/label_deli_date"
            android:layout_below="@+id/text_order_pur_date"
            android:text="Delivery date"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/label_quantity"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/label_deli_date"
            android:text="Quantity:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/text_order_quantity"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/label_quantity"
            android:layout_below="@+id/text_order_deli_date"
            android:text="Order number"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>