<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.live.programming.learningapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearningApp">
        <activity android:name=".SigninActivity"
            android:theme="@style/Theme.LearningApp.noActionBar"/>
        <activity
            android:name=".DrawerHomeActivity"
            android:label="@string/title_activity_drawer_home"
            android:theme="@style/Theme.LearningApp.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.LearningApp.noActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.LearningApp.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>